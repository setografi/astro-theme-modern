---
// Testimonial.astro
import TestimonialCard from '../common/TestimonialCard.astro';

// Array testimonial dengan tipe terdefinisi
const testimonials: {
  quote: string;
  name: string;
  role: string;
  company: string;
  variant: 'dark' | 'accent' | 'orange';
}[] = [
  {
    quote:
      'Working with Modern has been transformative for our business. Their attention to detail and innovative solutions helped us achieve our goals faster than we imagined.',
    name: 'Sarah Johnson',
    role: 'CEO',
    company: 'TechStart Inc.',
    variant: 'dark',
  },
  {
    quote:
      'The team at Modern brought our vision to life with their exceptional design skills and technical expertise. They exceeded our expectations in every way.',
    name: 'Michael Chen',
    role: 'Marketing Director',
    company: 'Growth Co.',
    variant: 'accent',
  },
  {
    quote:
      "Modern's innovative approach to problem-solving and their commitment to quality made them the perfect partner for our digital transformation journey.",
    name: 'Emma Davis',
    role: 'Product Manager',
    company: 'InnovateLab',
    variant: 'orange',
  },
];
---

<section class="h-full w-full px-4 py-16">
  <h2
    class="font-nunito-sans mb-4 text-2xl font-bold text-neutral-950 dark:text-neutral-100 sm:mb-6 sm:text-3xl md:mb-8 md:text-4xl"
  >
    What Our Clients Say
  </h2>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2 md:gap-6 lg:grid-cols-3">
    {testimonials.map((testimonial) => <TestimonialCard {...testimonial} />)}
  </div>
</section>
