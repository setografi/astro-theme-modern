<header class="h-full w-full" x-data="{ menuOpen: false }">
  <div
    class="relative z-20 flex items-center justify-between bg-neutral-100 px-4 py-4 dark:bg-neutral-600 sm:px-6 lg:px-12"
  >
    <a
      href="/"
      class="focus-visible:outline focus-visible:outline-2 focus-visible:outline-neutral-950 dark:focus-visible:outline-neutral-500"
    >
      <span
        class="font-nunito-sans text-xl font-bold text-neutral-950 transition-colors duration-300 dark:text-neutral-100 sm:text-2xl"
      >
        Modern
      </span>
    </a>

    <!-- Actions - Responsive Alignment -->
    <div class="flex items-center space-x-2 sm:space-x-4">
      <!-- Theme Toggle - Responsive Size -->
      <button
        type="button"
        @click="$store.theme.toggle()"
        class="inline-flex h-10 w-10 items-center justify-center rounded-full text-neutral-950 ring-neutral-950 transition-all duration-300 hover:bg-green-600 focus:outline-none focus-visible:ring-2 dark:text-neutral-100 dark:hover:bg-blue-600 sm:h-12 sm:w-12"
      >
        <span class="sr-only">Toggle theme mode</span>
        <i x-show="!$store.theme.isDark" class="ri-sun-line ri-xl transition-opacity duration-500"
        ></i>
        <i x-show="$store.theme.isDark" class="ri-moon-line ri-xl transition-opacity duration-500"
        ></i>
      </button>

      <!-- Menu Toggle - Responsive Size -->
      <button
        type="button"
        @click="menuOpen = !menuOpen"
        class="inline-flex h-10 w-10 items-center justify-center rounded-full text-neutral-950 ring-neutral-950 transition-all duration-300 hover:bg-green-600 focus:outline-none focus-visible:ring-2 dark:text-neutral-100 dark:hover:bg-blue-600 sm:h-12 sm:w-12"
        :aria-expanded="menuOpen"
      >
        <span class="sr-only">Toggle menu</span>
        <i x-show="!menuOpen" class="ri-menu-line ri-xl transition-opacity duration-500"></i>
        <i x-show="menuOpen" class="ri-close-large-line ri-xl transition-opacity duration-500"></i>
      </button>
    </div>
  </div>

  <!-- Responsive Mobile Menu -->
  <div
    x-show="menuOpen"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-4"
    class="z-10 h-[calc(100vh-4rem)] w-full bg-neutral-100 dark:bg-neutral-600 sm:h-[calc(100vh-5rem)]"
  >
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid gap-6 py-6 sm:gap-8 sm:py-8 lg:grid-cols-2">
        <!-- Hidden on Mobile, Visible on Large Screens  -->
        <div
          class="hidden items-center justify-center rounded-3xl bg-green-600 px-6 py-8 dark:bg-blue-600 lg:flex"
        >
          <p
            class="max-w-xs text-xl italic leading-relaxed text-neutral-100 sm:max-w-sm sm:text-2xl"
          >
            <span class="font-nunito-sans font-semibold">Modern</span> is a forward-thinking design studio
            dedicated to creating stunning web experiences.
          </p>
        </div>

        <!-- Navigation Links -->
        <nav class="flex flex-col gap-2 divide-y divide-neutral-800 dark:divide-neutral-300">
          <a
            href="/"
            class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 dark:text-neutral-100 sm:py-6 sm:text-3xl"
          >
            <span class="group-hover:underline">Home</span>
          </a>
          <a
            href="/about"
            class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 dark:text-neutral-100 sm:py-6 sm:text-3xl"
          >
            <span class="group-hover:underline">About</span>
          </a>
          <a
            href="/pricing"
            class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 dark:text-neutral-100 sm:py-6 sm:text-3xl"
          >
            <span class="group-hover:underline">Pricing</span>
          </a>
          <a
            href="/contact"
            class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 dark:text-neutral-100 sm:py-6 sm:text-3xl"
          >
            <span class="group-hover:underline">Contact</span>
          </a>
        </nav>
      </div>
    </div>
  </div>
</header>
