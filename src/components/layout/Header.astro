<header class="h-full w-full">
  {/* Responsive Navigation Container */}
  <div class="flex items-center justify-between px-4 py-4 sm:px-6 lg:px-12">
    {/* Brand Logo - Responsive Typography */}
    <a
      href="/"
      class="rounded-md focus-visible:outline focus-visible:outline-2 focus-visible:outline-neutral-950 dark:group-focus-visible:outline-neutral-500"
    >
      <span class="text-xl font-bold text-neutral-950 dark:text-neutral-100 sm:text-2xl">
        Modern
      </span>
    </a>

    {/* Actions - Responsive Alignment */}
    <div class="flex items-center space-x-2 sm:space-x-4">
      {/* Theme Toggle - Responsive Size */}
      <button
        type="button"
        id="theme-toggle"
        class="inline-flex h-10 w-10 items-center justify-center rounded-full text-neutral-950 ring-neutral-950 transition duration-500 hover:bg-green-600 focus:outline-none focus-visible:ring-2 dark:text-neutral-100 dark:hover:bg-blue-600 sm:h-12 sm:w-12"
      >
        <span class="sr-only">Toggle theme mode</span>
        <i id="theme-light" class="ri-sun-line ri-xl hidden"></i>
        <i id="theme-dark" class="ri-moon-line ri-xl block"></i>
      </button>

      {/* Menu Toggle - Responsive Size */}
      <button
        type="button"
        id="menu-toggle"
        class="inline-flex h-10 w-10 items-center justify-center rounded-full text-neutral-950 ring-neutral-950 transition duration-500 hover:bg-green-600 focus:outline-none focus-visible:ring-2 dark:text-neutral-100 dark:hover:bg-blue-600 sm:h-12 sm:w-12"
        aria-controls="website-menu"
        aria-expanded="false"
      >
        <span class="sr-only">Toggle menu</span>
        <i id="menu-icon-open" class="ri-menu-line ri-xl block"></i>
        <i id="menu-icon-close" class="ri-close-large-line ri-xl hidden"></i>
      </button>
    </div>
  </div>

  {/* Responsive Mobile Menu */}
  <div
    id="website-menu"
    class="mx-auto hidden h-[calc(100vh-4rem)] max-w-7xl px-4 sm:h-[calc(100vh-5rem)] sm:px-6 lg:px-8"
  >
    <div class="grid h-full grid-cols-1 gap-6 py-6 sm:gap-8 sm:py-8 lg:grid-cols-2">
      {/* Hidden on Mobile, Visible on Large Screens */}
      <div
        class="hidden items-center justify-center rounded-3xl bg-green-600 px-6 py-8 dark:bg-blue-600 sm:px-8 sm:py-12 lg:flex"
      >
        <p class="max-w-xs text-xl italic leading-relaxed text-neutral-100 sm:max-w-sm sm:text-2xl">
          <span class="font-medium">Modern</span> enables seamless user engagement and drives conversions.
        </p>
      </div>

      {/* Navigation */}
      <nav class="flex flex-col gap-2 divide-y divide-neutral-800 dark:divide-neutral-300">
        <a
          href="/"
          class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 transition dark:text-neutral-100 sm:py-6 sm:text-3xl"
        >
          <span class="group-hover:underline">Home</span>
        </a>
        <a
          href="/about"
          class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 transition dark:text-neutral-100 sm:py-6 sm:text-3xl"
        >
          <span class="group-hover:underline">About</span>
        </a>
        <a
          href="/pricing"
          class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 transition dark:text-neutral-100 sm:py-6 sm:text-3xl"
        >
          <span class="group-hover:underline">Pricing</span>
        </a>
        <a
          href="/contact"
          class="group py-4 text-2xl font-semibold tracking-tight text-neutral-950 transition dark:text-neutral-100 sm:py-6 sm:text-3xl"
        >
          <span class="group-hover:underline">Contact</span>
        </a>
      </nav>
    </div>
  </div>

  {/* JavaScript remains the same as in original code */}
  <script>
    // Theme toggle logic
    const themeToggle = document.getElementById('theme-toggle');
    const lightIcon = document.getElementById('theme-light');
    const darkIcon = document.getElementById('theme-dark');
    const logo = document.getElementById('logo');

    themeToggle.addEventListener('click', () => {
      document.documentElement.classList.toggle('dark');
      const isDark = document.documentElement.classList.contains('dark');
      darkIcon.style.display = isDark ? 'none' : 'block';
      lightIcon.style.display = isDark ? 'block' : 'none';
    });

    // Menu toggle logic
    const menuToggle = document.getElementById('menu-toggle');
    const menuIconOpen = document.getElementById('menu-icon-open');
    const menuIconClose = document.getElementById('menu-icon-close');
    const menuContent = document.getElementById('website-menu');

    menuToggle.addEventListener('click', () => {
      const isOpen = menuContent.classList.contains('hidden');
      menuContent.classList.toggle('hidden', !isOpen);
      menuIconOpen.style.display = isOpen ? 'none' : 'block';
      menuIconClose.style.display = isOpen ? 'block' : 'none';
    });
  </script>
</header>
